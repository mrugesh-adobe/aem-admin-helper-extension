{
  "manifest_version": 3,
  "name": "AEM Admin Helper",
  "description": "Quick access to AEM Admin API endpoints from .aem.page or .aem.live sites",
  "version": "1.0",
  "permissions": ["activeTab", "scripting", "cookies", "storage"],
  "host_permissions": [
    "*://*.aem.page/*",
    "*://*.aem.live/*",
    "https://admin.hlx.page/*",
    "https://*.maxxia.com.au/*"
  ],
  "web_accessible_resources": [{
    "resources": ["url-mapping.js"],
    "matches": ["<all_urls>"]
  }],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon48.png"
    }
  },
  "icons": {
    "128": "icons/icon128.png"
  }
}
